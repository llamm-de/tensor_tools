module test_common_kronecker
    use funit
    use libtt_common

    implicit none

contains

    @test
    subroutine assert_iEqualJReturnsOne()
        integer :: res

        res = kronecker(1,1)

        @assertTrue(res == 1)
    end subroutine assert_iEqualJReturnsOne

    @test
    subroutine assert_iNotEqualJReturnsZero()
        integer :: res

        res = kronecker(1,2)

        @assertTrue(res == 0)
    end subroutine assert_iNotEqualJReturnsZero

end module test_common_kronecker